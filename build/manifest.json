  "shortcuts": [
    {
      "name": "Order Food",
      "short_name": "Order",
      "description": "Quick access to order food",
      "url": "/menu",
      "icons": [
        {
          "src": "/shortcut-order.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Track Order",
      "short_name": "Track",
      "description": "Track your current order",
      "url": "/track",
      "icons": [
        {
          "src": "/shortcut-track.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Orders",
      "short_name": "Orders",
      "description": "View order history",
