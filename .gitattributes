# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Force LF for configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf

# Force LF for source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.php text eol=lf
*.css text eol=lf
*.html text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

